  (equal?

;;funcion que planta a un jugador cuando este decide hacerlo y lo saca de la lista de jugadores
;;player >>> jugador que decidio plantarse
;;Plist >>> lista de jugadores
(define (takeOut player Plist)
  (cond ((null? Plist)
         '())
        ((equal? player (car Plist))
         (cdr Plist))
        (else
         (cons (car Plist) (takeOut player (cdr Plist))))))


;;funcion que termina el juego si el jugador que decide plantarse es el unico participando
;;player >>> jugador que decidio plantarse
;;Plist >>> lista de jugadores
(define (stay player Plist)
  (cond ((and (equal? 1 (howMany Plista)) (equal? player (car Plista)))
         'se acabo el juego')


